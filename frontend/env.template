# Frontend Environment Configuration Template
# Copy this file to .env and update values as needed
# 
# Usage: cp env.template .env

# Backend path configuration for importing backend modules
# Path to backend src directory (relative to frontend root)
BACKEND_SRC_PATH=../backend/src

# Frontend development settings
DEBUG=true
LOG_LEVEL=INFO

# Dash app configuration
DASH_HOST=127.0.0.1
DASH_PORT_DASHBOARD=8050
DASH_PORT_GANTT=8051
DASH_PORT_METRICS=8052

# Frontend root directory (usually current directory)
FRONTEND_ROOT=.

# Optional: Custom config file path for backend
# BACKEND_CONFIG_PATH=../backend/config.json

# Optional: Asset directory
# ASSETS_DIR=app/assets
