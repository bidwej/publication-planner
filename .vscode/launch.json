{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Scheduler Script",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/generate_schedule.py",
      "args": [
        "--config", "config.json"
      ],
      "console": "integratedTerminal",
      "justMyCode": false,
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src"
      },
      "python": "${workspaceFolder}/.venv/Scripts/python.exe"
    },
    {
      "name": "Run Tests",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "tests/",
        "-v"
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src"
      },
      "python": "${workspaceFolder}/.venv/Scripts/python.exe"
    }
  ]
}
