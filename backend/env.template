# Backend Environment Configuration Template
# Copy this file to .env and update values as needed
# 
# Usage: cp env.template .env

# Python path configuration for global imports
# This allows backend modules to import each other without src. prefix
PYTHONPATH=src

# Database configuration
# SQLite database path (relative to project root)
DATABASE_PATH=../schedules.db

# Development settings
DEBUG=true
LOG_LEVEL=INFO

# Backend root directory (usually current directory)
BACKEND_ROOT=.

# Optional: Custom config file path
# CONFIG_PATH=config.json

# Optional: Output directory for exports
# OUTPUT_DIR=exports

# Optional: Data directory path
# DATA_DIR=data
